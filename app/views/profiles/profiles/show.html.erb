<div class="container my-5">
  <div class="row">
    <div class="col-lg-2">
      <%= render "layouts/left_menu" %>
    </div>
    <div class="col-lg-6">
      <div class="bg-white py-3">
        <div class="row">
          <div class="col-lg-10 d-flex align-items-center">
            <% if @user.icon == "default.png" %>
              <%= image_tag("/assets/developer.jpg", class: "img-fluid profile-icon") %>
            <% end %>
            <label class="fw-bold fs-4 mx-4"><%= @user.name %></label>
          </div>
          <div class="col-lg-2 d-flex align-items-center">
            <div class="dropdown">
              <% if @user.id == current_user.id%>
                <button type="button" class="btn post-center-content-btn" data-bs-toggle="dropdown" aria-expanded="false">
                  <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                    <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                  </svg>
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= button_to "プロフィールを更新", "#", class: "dropdown-item", method: :get %>
                  </li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
        <div class="d-flex align-items-center mt-3 mx-4">
          <label class="fw-bold fs-4 mx-3"><%= @user.name %></label>
          <label class="fw-bold fs-4 mx-3"><%= @user.name %></label>
        </div>
        <div class="mt-3 mx-4">
          <%= @user.profile %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="py-5 px-5 bg-primary">
        k
      </div>
    </div>
  </div>
</div>
