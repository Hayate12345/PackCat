<div class="vh-100 d-flex align-items-center">
  <div class="container col-lg-7 mx-auto">
    <div class="row">
      <div class="col-xl-6 col-lg-6 align-items-center d-flex">
        <h2 class="developer-text fw-bold fs-1">PackCat</h2>
      </div>
      <div class="col-xl-6 col-lg-6">
        <div class="bg-original px-5 py-5">
          <h2 class="text-white text-center fs-4 pb-5">新規会員登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-3">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "ユーザーネーム", required: true %>
            </div>
            <div class="mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス", required: true %>
            </div>
            <div class="mb-3">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード", required: true %>
            </div>
            <div class="mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードの確認", required: true %>
            </div>
            <div class="text-center">
              <%= f.submit "登録", class: "btn original-btn px-5" %>
            </div>
            <div class="mt-4">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
